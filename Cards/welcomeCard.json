{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Image",
      "url": "https://alphedra.com/wp-content/uploads/2016/06/alphedra-logo_red-long-01.png",
      "size": "stretch"
    },
    {
      "type": "TextBlock",
      "spacing": "medium",
      "size": "default",
      "weight": "bolder",
      "text": "Bienvenue Egamo",
      "wrap": true,
      "maxLines": 0
    },
    {
      "type": "TextBlock",
      "size": "default",
      "isSubtle": true,
      "text": "Je suis votre chatbot Alphedra ",
      "wrap": true,
      "maxLines": 0
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "A propos de Alphedra",
      "url": "https://alphedra.com/"
    },
    {
      "type": "Action.OpenUrl",
      "title": "Voir la liste de vos robots",
      "url": "https://alphedra.com/offer-values/"
    },
    {
      "type": "Action.OpenUrl",
      "title": "Contacter un support Alphedra",
      "url": "https://alphedra.com/contact/"
    }
  ]
}
